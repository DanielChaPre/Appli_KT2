<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:Appli_KT2.ViewModel"
             x:Class="Appli_KT2.View.DetalleUniversidadPage"
             xmlns:control="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:behaviors="clr-namespace:Appli_KT2.Utils;assembly=Appli_KT2"
             xmlns:viewmodels="clr-namespace:Appli_KT2.ViewModel;assembly=Appli_KT2"
             BackgroundImageSource="pleca_textura.jpg"
             Padding="5,2">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="New"  
            Icon="share.png"  
            Priority="0"  
            Order="Primary" 
            x:Name="icShare"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout 
                >
                <!--Aqui ira las imagenes y el nombre de la universidad-->
                <Frame
                    BackgroundColor="White"
                    HasShadow="true" 
                    HeightRequest="250"
                    BorderColor="Silver"
                    VerticalOptions="Center"
                    >
                    <AbsoluteLayout>
                        <StackLayout
                            AbsoluteLayout.LayoutBounds="0,0,1,0.9"
                            AbsoluteLayout.LayoutFlags="All"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            x:Name="logoLayout">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="7*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image
                                   Grid.Column="0"
                                   HorizontalOptions="FillAndExpand"
                                   Source="ic_arrow_back.png"
                                   VerticalOptions="CenterAndExpand"/>
                                <control:CarouselView
                                    BackgroundColor="Aqua"
                                    Grid.Column="1"
                                    HeightRequest="250"
                                    ItemsSource="{Binding MyDataSource}" 
                                    AbsoluteLayout.LayoutBounds="0, 0.7, 1, 0.1" 
                                    AbsoluteLayout.LayoutFlags="All"
                                    Position="{Binding Position, Mode=TwoWay}"
                                    VerticalOptions="FillAndExpand">
                                    <control:CarouselView.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout  
                                            HeightRequest="250"
                                            HorizontalOptions="CenterAndExpand"
                                            VerticalOptions="CenterAndExpand">

                                                <Image 
                                                    Grid.Column="1"
                                                    Source="{Binding imagen}" 
                                                    VerticalOptions="CenterAndExpand"
                                                    ScaleY="1.75"
                                                    x:Name="imgCarruselPlantel"/>

                                            </StackLayout>
                                        </DataTemplate>
                                    </control:CarouselView.ItemTemplate>
                                </control:CarouselView>
                                <Image
                                   Grid.Column="2"
                                    HorizontalOptions="FillAndExpand"
                                   Source="ic_arrow_forward.png"
                                   VerticalOptions="CenterAndExpand"/>
                            </Grid>

                            <local:Carouselndicator
                                IndicatorHeight="12" IndicatorWidth="12" 
                                UnselectedIndicator="ic_unselected_circle.png" 
                                SelectedIndicator="ic_selected_circle.png" 
                                Position="{Binding Position}" 
                                ItemsSource="{Binding MyDataSource}"
			                    AbsoluteLayout.LayoutBounds="0, 0.9, 1, 0.1" 
                                AbsoluteLayout.LayoutFlags="All"/>
                            <!--Agregar el carrusel-->

                            <Label
                                FontSize="Subtitle"
                                HorizontalOptions="CenterAndExpand"
                                Text="Universidad Tecnológica de León"
                                TextColor="Black"
                                VerticalOptions="EndAndExpand"
                                x:Name="txtNombreEscuela"
                            />
                        </StackLayout>
                    </AbsoluteLayout>
                </Frame>

                <!--Dirección-->
                <Label 
                    Margin="0,5,0,0"
                    Text="Dirección" HorizontalTextAlignment="Center"
                    TextColor="White"/>
                <Frame
                    BackgroundColor="White"
                    HasShadow="true" 
                    BorderColor="Silver"
                    VerticalOptions="Center">
                    <StackLayout>
                        <Label 
                            
                            TextColor="Gray"
                            x:Name="lblDireccionPlantel"
                            />
                        <maps:Map 
                            x:Name="MapView" 
                            HeightRequest="200"
                            HorizontalOptions="FillAndExpand" 
                            VerticalOptions="FillAndExpand">
                        </maps:Map>
                    </StackLayout>
                </Frame>
             
                <!--Carreras de la universidad-->
                <Label Text="Carreras" HorizontalTextAlignment="Center"
                       TextColor="White"/>
                <Frame
                    
                    BackgroundColor="White"
                    HasShadow="true" 
                    HeightRequest="250"
                    BorderColor="Silver"
                    VerticalOptions="Center">
                    <StackLayout
                        x:Name="lytCarreras"
                        >
                        <ListView 
                            x:Name="listViewCarreras" 
                            CachingStrategy="RecycleElement"
                            HasUnevenRows="True"
                            
                              >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell 
                                      Height="80" >
                                        <Frame
                                            BackgroundColor="Gray"
                                             Margin="0,3"
                                             HasShadow="true" 
                                             BorderColor="Silver"
                                             Padding="0"
                                                x:Name="framePrueba">
                                            <Label
                                                Text="{Binding NombreCarreraES}"
                                                x:Name="lblCarrera"
                                                TextColor="Black"
                                                VerticalTextAlignment="Center"
                                                HorizontalTextAlignment="Center"
                                                />
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </Frame>
               
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>