<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appli_KT2.View.CreateAccountPage"
             Title="Crear cuenta"
             Padding="10,0">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="#0066FF"
            Orientation="Vertical" 
            Padding="10,10"
            VerticalOptions="Center"
            >
            <Label 
                FontSize="Large"
                Margin="0,5"
                Text="Crear cuenta"
                TextColor="White"
                />
            <Label 
                Text="Curp"
                TextColor="White"
                />
            <Entry TextColor="White"/>
            <Label 
                
                Text="Contraseña"
                TextColor="White"
                />
            <Entry 
                IsPassword="True"
                TextColor="White"/>

            <Button 
                BackgroundColor="#FF8200"
                BorderRadius="7"
                Text="Crear cuenta"
                TextColor="White"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>